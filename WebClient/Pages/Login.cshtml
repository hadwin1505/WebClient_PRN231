@page
@model WebClient.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Login.Phone"></label>
        <input asp-for="Login.Phone" class="form-control" />
        <span asp-validation-for="Login.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Login.Password"></label>
        <input asp-for="Login.Password" class="form-control" type="password" />
        <span asp-validation-for="Login.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}
